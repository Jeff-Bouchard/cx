package main

var inputs [4]i64 = {49927398716, 49927398717, 1234567812345678, 1234567812345670}
 
var t [10]i32{0, 2, 4, 6, 8, 1, 3, 5, 7, 9}
 
func luhn(s i64) bool {
    odd := len(s) & 1
    var sum i32
    for i, c := range s {
        if c < '0' || c > '9' {
            return false
        }
        if i&1 == odd {
            sum += t[c-'0']
        } else {
            sum += int(c - '0')
        }
    }
    return sum%10 == 0
}
 
func main() {
	// initial inputs array
	inputs[0] = 49927398716
	inputs[1] = 49927398717
	inputs[2] = 1234567812345678
	inputs[3] = 1234567812345670

	// intial value for t array
	t[0] = 0
	t[1] = 2
	t[2] = 4
	t[3] = 6
	t[4] = 8
	t[5] = 1
	t[6] = 3
	t[7] = 5
	t[8] = 7
	t[9] = 9
	
    for i := 0; i < len(inputs); i++ {
        printf("%d is luhn: %d\n", inputs[i], luhn(inputs[i]))
    }
}
